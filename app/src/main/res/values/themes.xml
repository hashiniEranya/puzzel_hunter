<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NB_MineGame" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="Theme.MaterialComponents.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/grey</item>
        <item name="colorControlActivated">@color/green</item>
    </style>


    <style name="font_style_normal">
        <item name="android:fontFamily">@font/regular</item>
    </style>

    <style name="font_style_headers">
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="font_style_sub_headers">
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textSize">20sp</item>
    </style>


    <style name="font_style_edittext_label">
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="font_style_bold">
        <item name="android:fontFamily">@font/bold</item>
    </style>

    <style name="dark_button">
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:background">@drawable/dark_button</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="light_button">
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:background">@drawable/light_button</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="grey_button">
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:background">@drawable/edittext_bg</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="edittext">
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:background">@drawable/edittext_bg</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:maxLength">30</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/grey</item>

    </style>


    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowTranslucentStatus">true</item>

        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
</resources>