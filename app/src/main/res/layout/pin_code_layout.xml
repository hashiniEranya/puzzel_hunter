<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/rl_pin_code"

    android:layout_height="match_parent">




    <androidx.cardview.widget.CardView
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:cardBackgroundColor="@color/light_grey"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10sp"
            android:orientation="vertical">




            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:columnCount="3"
                android:orientation="horizontal"
                android:useDefaultMargins="true">

                <TextView
                    android:id="@+id/number_1"
                    style="@style/font_style_normal"
                    android:layout_width="@dimen/pin_button_width"
                    android:layout_height="@dimen/pin_button_width"
                    android:background="@drawable/pin_button"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/number_2"
                    style="@style/font_style_normal"
                    android:layout_width="@dimen/pin_button_width"
                    android:layout_height="@dimen/pin_button_width"
                    android:background="@drawable/pin_button"

                    android:gravity="center"
                    android:orientation="vertical"
                    android:text="2"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/number_3"
                    style="@style/font_style_normal"
                    android:layout_width="@dimen/pin_button_width"
                    android:layout_height="@dimen/pin_button_width"
                    android:background="@drawable/pin_button"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:text="3"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/number_4"
                    style="@style/font_style_normal"
                    android:layout_width="@dimen/pin_button_width"
                    android:layout_height="@dimen/pin_button_width"
                    android:background="@drawable/pin_button"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:text="4"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/number_5"
                    style="@style/font_style_normal"
                    android:layout_width="@dimen/pin_button_width"
                    android:layout_height="@dimen/pin_button_width"
                    android:background="@drawable/pin_button"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:text="5"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/number_6"
                    style="@style/font_style_normal"
                    android:layout_width="@dimen/pin_button_width"
                    android:layout_height="@dimen/pin_button_width"
                    android:background="@drawable/pin_button"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:text="6"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/number_7"
                    style="@style/font_style_normal"
                    android:layout_width="@dimen/pin_button_width"
                    android:layout_height="@dimen/pin_button_width"
                    android:background="@drawable/pin_button"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:text="7"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/number_8"
                    style="@style/font_style_normal"
                    android:layout_width="@dimen/pin_button_width"
                    android:layout_height="@dimen/pin_button_width"
                    android:background="@drawable/pin_button"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:text="8"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/number_9"
                    style="@style/font_style_normal"
                    android:layout_width="@dimen/pin_button_width"
                    android:layout_height="@dimen/pin_button_width"
                    android:background="@drawable/pin_button"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:text="9"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/ll_backspace"
                    android:layout_width="@dimen/pin_button_width"
                    android:layout_height="@dimen/pin_button_width"
                    android:background="@color/light_grey"
                    android:gravity="center"
                    android:orientation="vertical">



                </LinearLayout>

                <TextView
                    android:id="@+id/number_0"
                    style="@style/font_style_normal"
                    android:layout_width="@dimen/pin_button_width"
                    android:layout_height="@dimen/pin_button_width"
                    android:background="@drawable/pin_button"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textStyle="bold" />


                <LinearLayout
                    android:id="@+id/ll_enter"
                    android:layout_width="@dimen/pin_button_width"
                    android:layout_height="@dimen/pin_button_width"
                    android:background="@color/light_grey"
                    android:gravity="center"
                    android:orientation="vertical">



                </LinearLayout>



            </GridLayout>

            <TextView
                android:id="@+id/lbl_submit"
                style="@style/font_style_normal"
                android:layout_width="255dp"
                android:layout_height="@dimen/pin_button_width"
                android:textAllCaps="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:background="@drawable/pin_button"
                android:gravity="center"
                android:orientation="vertical"
                android:text="@string/submit"
                android:textColor="@color/white"
                android:textStyle="bold" />


        </LinearLayout>


    </androidx.cardview.widget.CardView>


</RelativeLayout>



